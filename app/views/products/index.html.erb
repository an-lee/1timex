    <div class="filters-bar">
        <!-- nav-tabs -->
      <ul class="nav nav-tabs">
          <li class="active"><a data-toggle="all" href="#home">All</a></li>
          <li><a data-toggle="tab" href="#1hour">One Hour</a></li>
          <li><a data-toggle="tab" href="#1day">One Day</a></li>
          <li><a data-toggle="tab" href="#1week">One Week</a></li>
          <li><a data-toggle="tab" href="#3month">Three Months</a></li>
          <li><a data-toggle="tab" href="#1year">One Year</a></li>
          <li><a data-toggle="tab" href="#7year">Seven Years</a></li>
        </ul>
